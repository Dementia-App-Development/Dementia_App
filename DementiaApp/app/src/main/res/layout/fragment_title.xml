<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TitleFragment">


        <ImageView
            android:id="@+id/titleMementoImageView"
            android:layout_width="416dp"
            android:layout_height="262dp"
            android:src="@drawable/logo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/titleQuizButton"
            android:layout_width="275dp"
            android:layout_height="90"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_button"
            android:text="@string/titleQuizButton_text"
            android:textSize="32sp"
            app:icon="@drawable/ic_quiz"
            app:layout_constraintBottom_toTopOf="@+id/titleResultsButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titleMementoImageView"
            app:layout_constraintVertical_bias="0.50" />

        <Button
            android:id="@+id/titleResultsButton"
            android:layout_width="275dp"
            android:layout_height="90"
            android:layout_marginBottom="16dp"
            android:background="@drawable/round_button"
            android:text="@string/titleResultsButton_text"
            android:textSize="32sp"
            app:icon="@drawable/ic_results"
            app:layout_constraintBottom_toTopOf="@+id/titleWebsiteButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/titleWebsiteButton"
            android:layout_width="275dp"
            android:layout_height="90"
            android:layout_marginBottom="24dp"
            android:background="@drawable/round_button"
            android:text="@string/titleWebsiteButton_text"
            android:textSize="32sp"
            app:icon="@drawable/ic_support"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>