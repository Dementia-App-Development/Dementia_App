<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragments.QuizFragment">

        <TextView
            android:id="@+id/tv_time_limit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text='"X" SECONDS' />

        <TextView
            android:id="@+id/tv_question_no"
            android:layout_width="380dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:text="Question Title"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/tv_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="48sp"
            android:text="instructions" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:srcCompat="@tools:sample/avatars"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvSubText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="sub text" />

        <EditText
            android:id="@+id/date"
            android:layout_width="358dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="1945"
            android:inputType="date"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/voiceButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_mic"
            android:visibility="gone"/>
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Start Timer"
            android:visibility="gone"/>

        <Button
            android:id="@+id/trueButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint = "#00FF0A"
            android:text="Correct"
            android:visibility="gone"/>

        <Button
            android:id="@+id/falseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint = "#FF1100"
            android:text="Incorrect"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/Text"
            android:layout_width="358dp"
            android:layout_height="5dp"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Please write the answer here"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="293dp"
            android:layout_height="68dp"
            android:layout_margin="8dp"
            android:padding="8dp"
            android:text="Next Question"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24" />

        <ProgressBar
            android:id="@+id/bar"
            android:max = "100"
            android:minHeight="24dip"
            android:maxHeight="24dip"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:indeterminate = "false"
            android:progress="50"
            android:progressBackgroundTint = "#FF1100"
            android:progressTint = "#00FF0A" />

    </LinearLayout>
</layout>