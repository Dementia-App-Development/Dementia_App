<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        tools:context=".fragments.PreQuizFragment"
        android:padding="16dp">

        <TextView
            android:id="@+id/preQuizPromptTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="Are you assisting someone or doing the quiz yourself?"
            android:textAlignment="center"
            android:textSize="48sp" />

        <Button
            android:id="@+id/preQuizAssistingButton"
            android:layout_width="320dp"
            android:layout_height="114dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Assisting"
            android:textSize="34sp"
            app:icon="@drawable/ic_assistance" />

        <Button
            android:id="@+id/preQuizForMyselfButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="For Myself"
            android:textSize="34sp"
            app:icon="@drawable/ic_myself" />

    </LinearLayout>
</layout>