<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".fragments.PatientDetailsFragment">

        <TextView
            android:id="@+id/patientDetailsHeaderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patientDetailHeaderTextView_text"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/patientDetailsAreYouTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patientDetailsAreYouTextView_text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/patientDetailsAtHomeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="@string/patientDetailsAtHomeButton_textOff"
                android:textOn="@string/patientDetailsAtHomeButton_textOn" />

            <TextView
                android:id="@+id/patientDetailsOrTextView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/patientDetailsOrTextView1_text"
                android:textAlignment="center" />

            <ToggleButton
                android:id="@+id/patientDetailsAtClinicButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/patientDetailsAtClinicButton_textOff"
                android:textOn="@string/patientDetailsAtClinicButton_textOn" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/patientDetailsByMyselfButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textOff="@string/patientDetailsByMyselfButton_textOff"
                android:textOn="@string/patientDetailsByMyselfButton_textOn" />

            <TextView
                android:id="@+id/patientDetailsOrTextView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/patientDetailsOrTextView2_text"
                android:textAlignment="center" />

            <ToggleButton
                android:id="@+id/patientDetailsBeingAssistedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOff="@string/patientDetailsBeingAssistedButton_textOff"
                android:textOn="@string/patientDetailsBeingAssistedButton_textOn" />

        </LinearLayout>

        <TextView
            android:id="@+id/patientDetailsNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patientDetailsNameTextView_text"
            android:textSize="24sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/patientDetailsNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/patientDetailsNameEditText_hint"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/patientDetailsAgeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patientDetailsAgeTextView_text"
            android:textSize="24sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/patientDetailsAgeEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/patientDetailsAgeEditText_hint"
            android:inputType="number" />

        <TextView
            android:id="@+id/patientDetailsGenderTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patientDetailsGenderTextView_text"
            android:textSize="24sp"
            android:visibility="gone" />

        <Spinner
            android:id="@+id/patientDetailsGenderSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:entries="@array/Genders"
            android:hint="@string/patientDetailsGenderSpinner_hint"
            android:spinnerMode="dropdown" />

        <Button
            android:id="@+id/patientDetailsGoToQuizButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/patientDetailsGoToQuizButton_text" />

    </LinearLayout>
</layout>